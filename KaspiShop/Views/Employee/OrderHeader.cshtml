@model IEnumerable<KaspiShop.OrderDisplayService.OrderDetailDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Client Orders</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("City")
        </th>
        <th>
            @Html.DisplayName("Address Line")
        </th>
        <th>
            @Html.DisplayName("Product sum")
        </th>
        <th>
            @Html.DisplayName("Total sum with taxes and ship cost")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)$
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDue)$
            </td>
            <td>
                @Html.ActionLink("Details", "PurchaseDetail", "Order", new { purchaseID = item.PurchaseOrderID }, new { @class = "btn btn-default navbar-btn" })
            </td>
        </tr>
    }

</table>
