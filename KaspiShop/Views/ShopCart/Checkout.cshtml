@model AW.Domain.Core.CustomDTO.ShoppingDetails

@{
    ViewBag.Title = "Checkout";
}

<h2>Check out now</h2>
<p>Last step! Enter your details and we will deliver products to you</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
        <h3>Ship to</h3>

        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

         <div class="form-group">
            <label>Country</label>
            @Html.DropDownList("Country", ((List<string>)ViewBag.Country).Select(y => new SelectListItem { Text = y, Value = y, Selected = true}), new {@class = "form-control" })
        </div> 
        
        <div class="form-group">
            <label>City</label>
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        </div> 
        
        <div class="form-group">
            <label>Address</label>
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        </div>
        
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Make order" />
    </div>

}


